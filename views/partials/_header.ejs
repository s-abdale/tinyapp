<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (user) { %>
      <!-- log out -->
      <form method="POST" action="/logout">
        <label>Logged in as: <%= user["email"] %>!</label>
        <button type="logout" class="btn btn-primary">Log Out</button>
      </form>
    <% } else{ %>
      <!-- log in -->
      <form method="POST" action="/login">
        <input type="text" id="user" name="username" placeholder="Username">
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
      <!-- register -->
      <!-- <form method="POST" action="/register">
        <button type="submit" class="btn btn-warning" <a href="/register">Register</a></button>
      </form> -->
      <button type="submit" class="btn btn-warning"><a href="/register">Register</a></button>
    <% } %>
  </nav>
</header>